@model Assignment.ViewModel.EditTask;
<div class="modal fade" id="EditTaskModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="staticBackdropLabel">Task Form</h5>
                <button type="button" class="btn-close closeModalBtn" data-bs-dismiss="modal" id="closeModalBtn" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="form-floating" asp-action="EditTask" method="post" asp-controller="Home">
                    <div class="row g-2 m-1">
                        <div class="col-6">
                            <div class="form-floating">
                                <input asp-for="Id" hidden />
                                <input type="text" id="TaskName" name="TaskName" asp-for="TaskName" class="form-control" placeholder="" />
                                <label for="TaskName">Task Name</label>
                            </div>
                            <span asp-validation-for="TaskName"></span>
                        </div>
                        <div class="col-6">
                            <div class="form-floating">
                                <input type="text" id="Assignee" name="Assignee" asp-for="Assignee" class="form-control" placeholder="" />
                                <label for="Assignee">Assignee</label>
                            </div>
                            <span asp-validation-for="Assignee"></span>
                        </div>
                    </div>
                    <div class="row g-2 m-1">
                        <div class="col-6">
                            <div class="form-floating">
                                <input type="text" id="Description" name="Description" asp-for="Description" class="form-control" placeholder="" />
                                <label for="Description">Description</label>
                            </div>
                            <span asp-validation-for="Description"></span>
                        </div>
                        <div class="col-6">
                            <div class="form-floating">
                                <input type="date" id="DueDate" name="DueDate" value="@Model.DueDate.ToString("yyyy-MM-dd")" asp-for="DueDate" class="form-control" placeholder="" />
                                <label for="DueDate">DueDate</label>
                            </div>
                            <span asp-validation-for="DueDate"></span>
                        </div>
                    </div>
                    <div class="row g-2 m-1">
                        <div class="col-6">
                            <div class="form-floating">
                                <input type="text" id="City" name="City" asp-for="City" class="form-control" placeholder="" />
                                <label for="City">City</label>
                            </div>
                            <span asp-validation-for="City"></span>
                        </div>
                        <div class="col-6">
                            <div class="form-floating">
                                <select asp-for="CategoryId" class="form-select" name="CategoryId" id="CategoryId" aria-label="Floating label select example">
                                    <option value="0">Category</option>
                                    @foreach (var item in Model.categories)
                                    {
                                        if (item.Id == Model.CategoryId)
                                        {
                                            <option value="@item.Id" selected>@item.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                </select>
                                <label for="CategoryId">Category</label>
                            </div>
                            <span asp-validation-for="CategoryId"></span>
                        </div>
                    </div>
                    <div class="row g-2 m-1">
                        <div class="col-6">

                            <button type="button" data-bs-dismiss="modal" class="btn btn-outline-success w-100 closeModalBtn">
                                Cancel
                            </button>
                        </div>
                        <div class="col-6">

                            <button type="submit" class="btn btn-success w-100">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $("#closeModalBtn").click(function () {
        $("#ModalDiv").empty();
    })
</script>