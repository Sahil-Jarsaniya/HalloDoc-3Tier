@model PaginatedList<pendingReqViewModel>;
<table class="table table-responsive d-none d-md-table">
    <thead>
        <tr class="table-secondary">
            <td>Name</td>
            <td></td>
            <td>Date of Birth</td>
            <td>Requestor</td>
            <td>Physician Name</td>
            <td>Date of Service</td>
            <td>Phone</td>
            <td>Address</td>
            <td>Notes</td>
            <td>Chat with</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items.Count == 0)
        {
            <tr>
                <td>No data found.</td>
            </tr>
        }
        @foreach (var item in Model.Items)
        {
            var bg = "";
            @switch (item.reqTypeId)
            {
                case 1:
                    bg = "#4fc54d";
                    break;
                case 2:
                    bg = "#ff9e2c";
                    break;
                case 3:
                    bg = "#10bce9";
                    break;
                case 4:
                    bg = "#f745aa";
                    break;
            }
            <tr>
                <td style="background-color: @bg;">@item.Firstname @item.Lastname</td>
                <td style="background-color: @bg;">
                    <a href="mailto: @item.Email" class="btn border rounded">
                        <img src="~/images/envelope.svg" />
                    </a>
                </td>
                <td style="background-color: @bg;">
                    @item.Strmonth
                </td>
                <td style="background-color: @bg;">
                    @if (item.reqTypeId == 1)
                    {
                        <p>
                            Patient
                            @item.reqFirstname @item.reqLastname
                        </p>
                    }
                    @if (item.reqTypeId == 2)
                    {
                        <p>
                            Family/Friend
                            @item.reqFirstname @item.reqLastname
                        </p>
                    }
                    @if (item.reqTypeId == 3)
                    {
                        <p>
                            Concierge
                            @item.reqFirstname @item.reqLastname
                        </p>
                    }
                    @if (item.reqTypeId == 4)
                    {
                        <p>
                            Business
                        @item.reqFirstname @item.reqLastname
                        </p>

                    }
                </td>
                <td style="background-color: @bg;">
                    @item.physicianName
                </td>
                <td style="background-color: @bg;">
                    @item.Createddate
                </td>
                <td style="background-color: @bg;">
                    <a href="tel:@item.Phonenumber" class="btn border rounded d-flex justify-content-center">
                        <img src="~/images/telephone.svg" />
                        @item.Phonenumber
                    </a>
                    (Patient)
                    @if (item.reqTypeId == 2)
                    {
                        <div>
                            <a href="tel:@item.FamilyPhonenumber" class="btn border rounded d-flex justify-content-center">
                                <img src="~/images/telephone.svg" />
                                @item.FamilyPhonenumber
                            </a>
                            (Family/Friend)
                        </div>
                    }
                    @if (item.reqTypeId == 3)
                    {
                        <div>
                            <a href="tel:@item.ConciergePhonenumber" class="btn border rounded d-flex justify-content-center">
                                <img src="~/images/telephone.svg" />
                                @item.ConciergePhonenumber
                            </a>
                            (Concierge)
                        </div>
                    }
                    @if (item.reqTypeId == 4)
                    {
                        <div>
                            <a href="tel:@item.BusinessPhonenumber" class="btn border rounded d-flex justify-content-center">
                                <img src="~/images/telephone.svg" />
                                @item.BusinessPhonenumber
                            </a>
                            (Business)
                        </div>
                    }
                </td>
                <td style="background-color: @bg;">
                    @item.Street, @item.City, @item.State, @item.Zipcode
                </td>
                <td style="background-color: @bg;">
                    @item.Notes
                </td>
                <td style="background-color: @bg;">
                        <a class="btn border rounded ProviderChatBtn" data-id="@item.reqClientId">Provider</a>
                <a class="btn border rounded PatientChatBtn" data-id="@item.reqClientId">Patient</a>
                </td>
                <td style="background-color: @bg;">
                    <a class="btn border rounded dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Actions
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a class="dropdown-item" href="@Url.Action("ViewCase", new {reqClientId = item.reqClientId})">View Case</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ViewUpload","AdminDashboard", new {reqClientId = item.reqClientId})">View Uploads</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ViewNote", new{reqClientId = item.reqClientId})">View Notes</a></li>
                        <li><a class="dropdown-item btn TransferCasebtn" data-id="@item.reqClientId" data-phyId="@item.Physicianid">Transfer</a></li>
                        <li><a class="dropdown-item ClearCaseBtn" href="#" data-id="@item.reqClientId">Clear Case</a></li>
                        <li><a class="dropdown-item AgrmenntCaseBtn" href="#" data-id="@item.reqClientId" data-email="@item.Email" data-phone="@item.Phonenumber">Send Agreement</a></li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
@*Mobile View*@
<div class="d-md-none mobileView">
    @foreach (var item in Model.Items)
    {
        var name = item.Firstname + "," + item.Lastname;
        <div class="shadow m-1 p-2" data-bs-toggle="collapse" href="#@item.reqClientId" role="button" aria-expanded="false">

            <div class="d-flex justify-content-between mb-2">
                @name
                @if (item.reqTypeId == 1)
                {
                    <div>
                        Patient
                        <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                            <circle fill="#5fbc61" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                        </svg>
                    </div>
                }
                @if (item.reqTypeId == 2)
                {
                    <div>
                        Family/Friend
                        <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                            <circle fill="#ed9124" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                        </svg>
                    </div>
                }
                @if (item.reqTypeId == 3)
                {
                    <div>
                        Concierge
                        <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                            <circle fill="#007fc6" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                        </svg>
                    </div>
                }
                @if (item.reqTypeId == 4)
                {
                    <div>
                        Business
                        <svg height="15" width="15" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                            <circle fill="#e26277" r="45" cx="50" cy="50" stroke="grey" stroke-width="3" />
                        </svg>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-between">
                <span class="w-50">
                    @item.Street, @item.City, @item.State, @item.Zipcode
                </span>
                <div class="w-50">
                    <button type="button" class="btn btn-outline-primary float-end">Map Location</button>
                </div>
            </div>
            <p>
                <img src="/images/clock.svg" />
                Wait Time: @item.Createddate
            </p>
        </div>
        <div class="collapse shadow m-1 p-2" id="@item.reqClientId">
            <a class="btn btn-outline-success float-end" href="@Url.Action("ViewCase", new {reqClientId = item.reqClientId})">View Case</a>
            <p>Date of birth: @item.Strmonth</p>
            <p>Email: @item.Email</p>
            <p>Patient: @item.Phonenumber</p>
            <p>Tranfer Note: @item.Notes</p>
            <p>Date of service: -</p>
            <p>Physician: @item.physicianName</p>
            <p>Requestor: @item.reqFirstname, @item.reqLastname</p>
            <div class="row">
                <div class="col-5 m-2">
                    <a class="btn btn-warning AgrmenntCaseBtn w-100" data-id="@item.reqClientId" data-email="@item.Email" data-phone="@item.Phonenumber">Send Agreement</a>
                </div>
                <div class="col-5 m-2">
                    <a class="btn btn-success w-100" href="@Url.Action("ViewNote", new {reqClientId = item.reqClientId})">View Notes</a>
                </div>
                <div class="col-5 m-2">
                    <a class="btn btn-primary TransferCasebtn w-100" data-id="@item.reqClientId" data-phyid="@item.Physicianid">Transfer</a>
                </div>
                <div class="col-5 m-2">
                    <a class="btn btn-success w-100" href="@Url.Action("ViewUpload","AdminDashboard", new {reqClientId = item.reqClientId})">View Uploads</a>
                </div>
                <div class="col-5 m-2">
                    <a class="btn btn-warning ClearCaseBtn w-100" href="#" data-id="@item.reqClientId">Clear Case</a>
                </div> 
                <div class="col-5 m-2">
                    <a href="mailto: @item.Email" class="w-100 btn btn-success rounded">
                        Email
                    </a>
                </div>
            </div>
            <div class="row ">
                <div class="col-12 d-flex justify-content-end ">
                    <span class="my-auto me-2">
                        Chat with:
                    </span>
                        <a class="btn border rounded ProviderChatBtn" data-id="@item.reqClientId">Provider</a>
                    <a class="btn border rounded PatientChatBtn" data-id="@item.reqClientId">Patient</a>
                </div>
            </div>
        </div>
    }
</div>

@*Pagination*@
<partial name="_PaginationPart" />
<script>
    $(".TransferCasebtn").click(function () {
        $("#TransferClientId").val($(this).data('id'));
        $("#PhyId").val($(this).data('phyid'));
        $("#TransferModel").modal('show');
    })
    $(".ClearCaseBtn").click(function () {
        $("#ClearClientId").val($(this).data('id'));
        $("#ClearCaseModel").modal('show');
    })
    $(".AgrmenntCaseBtn").click(function(){
        $("#AgreementClientId").val($(this).data('id'));
        $("#AgreementPhone").val($(this).data('phone'));
        $("#AgreementEmail").val($(this).data('email'));

        $("#SendAgreementModel").modal('show');
    })

    $(".ProviderChatBtn").click(function () {
        var reqclientid = $(this).data('id');
        $.ajax({
            url: '/AdminDashboard/ChatWithProvider',
            type: 'GET',
            data: {
                reqclientid: reqclientid
            },
            success: function (res) {
                $("#myChatBox").html(res);
                openChatBox();
            }
        })
    })

    $(".PatientChatBtn").click(function () {
        var reqclientid = $(this).data('id');
        $.ajax({
            url: '/AdminDashboard/ChatWithPatient',
            type: 'GET',
            data: {
                reqclientid: reqclientid
            },
            success: function (res) {
                $("#myChatBox").html(res);
                openChatBox();
            }
        })
    })
    $(".pageBtn").click(function () {
        var reqType = $("#filterReqType").val()
        var pageNumber = $(this).data('page');
        var ReginoId = $("#RegionFilter").val()
        var Name = $("#search").val();

        $("#pagenumber").val(pageNumber);

        $.ajax({
            url: '/AdminDashboard/PartialTable',
            type: 'POST',
            data: { Name: Name, status: 2, reqType: reqType, pageNumber: pageNumber },
            success: function (result) {
                $('#PartialTable').html(result);
            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        })
    })
</script>