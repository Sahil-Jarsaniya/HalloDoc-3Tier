@model HalloDoc.DataAccess.ViewModel.AdminViewModel.CloseCaseViewModel;
@{
    ViewData["Title"] = "Conclude Care";
    Layout = "_PhysicianLayout";
}

<div class="container">
    <div class="d-flex justify-content-between mt-5">
        <h3>
            Conclude Care
        </h3>
        <a href="@Url.Action("Dashboard", "PhysicianDashboard", new{status = Model.status})"
           class="btn btn-outline-primary m-2 text-decoration-none float-end" id="back-btn">
            <img src="~/images/arrow_back_ios_FILL0_wght400_GRAD0_opsz24.svg" class="img-fluid" alt="">
            Back
        </a>
    </div>
    <div class="p-3 shadow">
       
        <div class="d-flex justify-content-between">
            <div>
                <span>Patient Name</span>
                <p>
                    <span class="fs-4" style="color: #01bce9">@Model.Firstname @Model.Lastname </span>(@Model.confirmationNo)
                </p>
            </div>
        </div>
        <form method="post" asp-action="ConcludeCare" asp-controller="PhysicianDashboard" enctype="multipart/form-data">
        <div class="d-flex justify-content-between m-1">
            <h4>Encounter Forms</h4>
            <input asp-for="ReqClientId" value="@Model.ReqClientId" hidden/>
            <input id="encounterForm" asp-for="fileName" type="file" class="form-control" hidden required>
            <label class="input-group-text btn btn-primary" id="uploadFileLabel1" for="encounterForm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z" />
                    <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                </svg>
                Upload
            </label>
        </div>

        <div class="d-md-none">
            @foreach (var item in Model.PatientDocumentViewModel)
            {
                @if (item.IsDeleted != true)
                {
                    <div>
                        <div>
                            <span class="FileName">
                                @item.Filename
                            </span>
                        </div>
                        <span class="">@item.createdate</span><br />
                        <span class="">
                            <input value="@item.ReqClientId" class="ReqClientId" hidden>
                            <a href="/uploadedFiles/@item.Filename" class="btn btn-outline-primary" download>
                                <img id="uploadFile" src="~/images/cloud-arrow-down.svg" />
                            </a>
                        </span>
                    </div>
                }
            }
            <div>
            </div>
        </div>

        <table class="table d-none d-md-table">
            <thead>
                <tr class="m-0 p-0 table-secondary">
                    <th colspan="2">document</th>
                    <th>Upload Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PatientDocumentViewModel)
                {
                    @if (item.IsDeleted != true)
                    {
                        <tr class="m-0 p-0">
                            <td colspan="2" class="FileName">@item.Filename</td>
                            <td>@item.createdate</td>
                            <td>
                                <input value="@item.ReqClientId" class="ReqClientId" hidden>
                                <a href="/uploadedFiles/@item.Filename" class="btn downloadFile"
                                   style="color: #01bce9; border: 1px solid #01bce9;" download>
                                    <img id="uploadFile" src="~/images/cloud-arrow-down.svg" />
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
       
            <h4 class="mt-4 mb-4 ms-2">Providers Notes</h4>
            <div class="row g-2 m-1">
                <textarea asp-for="note" class="form-control" placeholder="Provider Note"
                          style="height: 100px"></textarea>
            </div>
                <button type="submit" class="btn btn-primary float-end m-1">Conclude Care</button><br /><br />
        </form>
    </div>
</div>

@section AdminScript {
    <script>
       
    </script>
}