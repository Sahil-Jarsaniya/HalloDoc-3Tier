@model PaginatedList<BlockHistoryVM>;

<table class="table table-responsive">
    <thead>
        <tr class="table-secondary">
            <td>Patient Name</td>
            <td>Phone Number</td>
            <td>Email</td>
            <td>Created Date</td>
            <td>Notes</td>
            <td>Is Active</td>
            <td>Action  </td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Items)
        {
            <tr>
                <td>@item.PatientName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.CreatedDate</td>
                <td>@item.Notes</td>
                <td>
                    @if (item.isActive == true)
                    {
                        <input type="checkbox" checked disabled/>
                    }
                    else
                    {
                        <input type="checkbox" disabled/>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-primary @(item.isActive == true ? "d-none" : "")" asp-action="UnBlockPatient" asp-controller="RecordsMenu" asp-route-id="@item.ReqId">
                        Unblock
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@*Pagination*@

<partial name="_PaginationPart" />

<script>
    $(".pageBtn").click(function () {
        var pageNumber = $(this).data('page');
        var Phonenumber = $("#Phonenumber").val();
        var Email = $("#Email").val();
        var PatientName = $("#PatientName").val();
        var Date1 = $("#Date1").val();
        $.ajax({
            url: '/RecordsMenu/BlockHistoryTable',
            type: 'POST',
            data: {
                pagenumber: pageNumber,
                Phonenumber: Phonenumber,
                Email: Email,
                PatientName: PatientName,
                Date1: Date1
            },
            success: function (result) {
                $('#blockTable').html(result);
            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        })
    })
</script>