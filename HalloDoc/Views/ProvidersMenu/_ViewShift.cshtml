@model CreateShift;
<div class="modal fade CreateShiftModel" id="CreateShiftModel" tabindex="-1" aria-labelledby="newReqModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #01bce9; color:white;">
                <h1 class="modal-title fs-5" id="exampleModalLabel">View Shift</h1>
                <button type="button" class="btn-close closeBtn" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="dropdown">
                    <form id="ViewShiftForm" asp-action="UpdateShift" asp-controller="ProvidersMenu" asp-route-id="@Model.ShiftDetailId">
                        <fieldset id="fieldset" disabled>
                          
                            <div class="row g-2">
                                <div class="col-12">
                                    <select asp-for="Regionid" class="form-select form-select mb-3  RegionSelect" id="RegionSelect" aria-label="Large select example">
                                        <option value="0">Select Region</option>
                                        @foreach (var item in Model.Regions)
                                        {
                                            if (item.Regionid == Model.Regionid)
                                            {
                                                <option value="@item.Regionid" selected>@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Regionid">@item.Name</option>
                                            }
                                        }
                                    </select>
                                    <span class="text-danger" asp-validation-for="Regionid"></span>
                                </div>
                                <div class="col-12">

                                    <select asp-for="Physicianid" class="form-select form-select mb-3 PhysicianSelect" id="PhysicianSelect" aria-label="Large select example">
                                        <option value="@Model.Physicianid" selected>@Model.PhysicianName</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="Physicianid"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Startdate" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" value="@Model.Startdate.ToString("yyyy-MM-dd")" class="form-control" placeholder="">
                                        <label for="">ShiftDate</label>
                                    </div>
                                    <span asp-validation-for="Startdate" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <div class="form-floating">
                                        <input asp-for="StartTime" type="time" class="form-control startTime" id="StartTime" placeholder="">
                                        <label for="">start</label>
                                    </div>
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <div class="form-floating">
                                        <input asp-for="EndTime" type="time" class="form-control" id="EndTime" placeholder="">
                                        <label for="">End</label>
                                    </div>
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <span class="text-danger" id="timeError"></span>
                                </div>
                            </div>
                        </fieldset><br />
                        @if (Model.status != 2)
                        {
                            @if (Model.Startdate >= DateOnly.FromDateTime(DateTime.Now))
                            {
                                <button type="reset" class="btn btn-primary d-none me-1 float-end" id="cancelBtn" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary me-1 d-none float-end" id="saveBtn">Save</button>
                                <button type="button" class="btn btn-danger me-1 float-end" id="deleteBtn" data-id="@Model.ShiftDetailId">Delete</button>
                                <button type="button" class="btn btn-primary me-1 float-end" id="editBtn" data-id="@Model.ShiftDetailId">Edit</button>
                                <button type="button" class="btn btn-primary me-1 float-end" id="reurnBtn" data-id="@Model.ShiftDetailId">Return</button>
                            }
                        }   
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Validation.js"></script>
<script>
    $(".RegionSelect").change(function () {
        var selectedRegion = $(this).val();
        if (selectedRegion == null || selectedRegion == 0) {
            document.getElementById("RegionSelect").nextElementSibling.textContent = "Select Region!!";
            $("#saveBtn").attr('disabled', 'disabled');
        } else {
            document.getElementById("RegionSelect").nextElementSibling.textContent = "";
            $("#saveBtn").removeAttr('disabled');
        }

        $.ajax({
            url: '/AdminDashboard/FilterPhysician',
            method: 'POST',
            data: {
                region: selectedRegion
            },
            success: function (response) {
                $(".PhysicianSelect").empty();
                $.each(response, function (index, doctor) {
                    $(".PhysicianSelect").append($('<option>').text(doctor.physicians).val(doctor.physicianId));
                })
            }
        })
    })


    $(".PhysicianSelect").change(function () {
        console.log($("#PhysicianSelect").val())
        if ($("#PhysicianSelect").val() == null || $("#PhysicianSelect").val() == 0) {
            document.getElementById("PhysicianSelect").nextElementSibling.textContent = "Select Physician!!";
            $("#saveBtn").attr('disabled', 'disabled');
        } else {
            document.getElementById("PhysicianSelect").nextElementSibling.textContent = "";
            $("#saveBtn").removeAttr    ('disabled');
        }
    })

    $("#editBtn").click(function () {
        $("#fieldset").prop('disabled', false);
        $("#cancelBtn").removeClass('d-none');
        $("#saveBtn").removeClass('d-none');
        $(this).addClass('d-none');
    })

    $("#deleteBtn").click(function () {
        var id = $(this).data('id');

        $.ajax({
            url: '/ProvidersMenu/DeleteShift',
            type: 'POST',
            data: { shiftDetailId: id },
            success: function () {
                $("#CreateShiftModel").modal('hide');
                if ($("#DayBtn").prop('checked')) {
                    $("#DayBtn").click();
                }
                if ($("#WeekBtn").prop('checked')) {
                    $("#WeekBtn").click();
                }
                if ($("#MonthBtn").prop('checked')) {
                    $("#MonthBtn").click();
                }
            }
        })
    })

    $("#reurnBtn").click(function () {
        var id = $(this).data('id');

        $.ajax({
            url: '/ProvidersMenu/ReturnShift',
            type: 'POST',
            data: { shiftDetailId: id },
            success: function () {
                $("#CreateShiftModel").modal('hide');
                if ($("#DayBtn").prop('checked')) {
                    $("#DayBtn").click();
                }
                if ($("#WeekBtn").prop('checked')) {
                    $("#WeekBtn").click();
                }
                if ($("#MonthBtn").prop('checked')) {
                    $("#MonthBtn").click();
                }
            }
        })
    })

    $(".closeBtn").click(function () {
        $("#CreateShiftModel").modal('toggle');
    })

    $("#StartTime").change(function () {
        var EndTime = $(this).val();
        var startTime = $("#EndTime").val();
        if (startTime <= EndTime) {
            $("#timeError").text("Select Proper Time!!");
            $("#saveBtn").attr('disabled', 'disabled');
            console.log("error")
        } else {
            console.log("error n")
            $("#saveBtn").removeAttr('disabled');
            $("#timeError").text("");
        }
    })
    $("#EndTime").change(function () {
        var EndTime = $(this).val();
        var startTime = $("#StartTime").val();
        if (startTime >= EndTime) {
            $("#timeError").text("Select Proper Time!!");
            $("#saveBtn").attr('disabled', 'disabled');
            console.log("error")
        } else {
            console.log("error n")
            $("#timeError").text("");
            $("#saveBtn").removeAttr('disabled');
        }
    })

</script>