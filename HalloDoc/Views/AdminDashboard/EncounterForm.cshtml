@model Encounter;
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_adminLayout";
}
<div class="container">
    <div class="container d-flex justify-content-between mt-4" style="max-width:1000px">
        <h4>
            Encounter Form
        </h4>
        <a href="@Url.Action("Dashboard","AdminDashboard")" class="btn btn-outline-primary m-2 text-decoration-none float-end"
           id="back-btn">
            <img src="~/images/arrow_back_ios_FILL0_wght400_GRAD0_opsz24.svg" class="img-fluid" alt="">
            Back
        </a>
    </div>
    <div class="container-fluid d-flex justify-content-center mt-4">

        <form method="post" asp-action="EncounterForm" asp-controller="AdminDashboard"  class="viewCaseForm form-floating shadow patient-request-form p-3">
            <span class="fs-2 m-auto" style="color:#01bce9">
                Medical Report-Confidential
            </span>
            <input asp-for="Requestid" value="@Model.Requestid" hidden/>
            <div class="row g-2 m-1">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Firstname" type="text" class="form-control" placeholder="">
                        <label for="">First Name</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="LastName" type="text" class="form-control" placeholder="">
                        <label for="">Last Name</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="Location" type="text" class="form-control" placeholder="">
                        <label for="">Location</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1 ">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Strmonth" type="date" class="form-control" placeholder="">
                        <label for="">Date Of Birth</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Servicedate" type="date" class="form-control" placeholder="">
                        <label for="">Date</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating phone-div w-100 h-100 ">
                        <input asp-for="Phonenumber" type="tel" class="patientPhone form-control w-100 h-100" placeholder="">
                        <label for="">Phone</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input id="checkEmail" asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                        <label for="">Email</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="PresentIllnessHistory" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">History of Present Illness Or Injury</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="MedicalHistory" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Medical History</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Medications" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Medications</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Allergies" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Allergies</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Temperature" type="text" class="form-control" placeholder="">
                        <label for="">Temp</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="HeartRate" type="text" class="form-control" placeholder="">
                        <label for="">HR</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="RespirationRate" type="text" class="form-control" placeholder="">
                        <label for="">RR</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-2">
                    <div class="form-floating">
                        <input asp-for="BloodPressureSystolic" type="text" class="form-control" placeholder="">
                        <label for="" style="max-width: 100%;  text-overflow: ellipsis">Blood Pressure(Systolic)</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-floating">
                        <input asp-for="BloodPressureDiastolic" type="text" class="form-control " placeholder="">
                        <label for="" style="max-width: 100%; text-overflow: ellipsis">Blood Pressure(Diastolic)</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="OxygenLevel" type="text" class="form-control" placeholder="">
                        <label for="">O2</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Pain" type="text" class="form-control" placeholder="">
                        <label for="">Pain</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Heent" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Heent</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Cardiovascular" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">CV</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Chest" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Chest</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Abdomen" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">ABD</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Extremities" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Extr</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Skin" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Skin</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Neuro" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Neuro</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Other" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Other</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Diagnosis" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Diagnosis</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="TreatmentPlan" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Treatment Plan</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="MedicationsDispensed" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Medications Dispensed</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <textarea asp-for="Procedures" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Procedures</label>
                    </div>
                </div>
            </div>
            <div class="row g-2 m-1">
                <div class="col-md">
                    <div class="form-floating">
                        <textarea asp-for="FollowUp" class="form-control" placeholder=""
                                  style="height: 100px" rows="2"></textarea>
                        <label for="">Followup</label>
                    </div>
                </div>
            </div>
            <button type="reset"  class="btn btn-outline-primary float-end m-1">Cancel</button>
            <button type="submit" class="btn btn-primary float-end m-1">Save Changes</button>
        </form>
    </div>
</div>