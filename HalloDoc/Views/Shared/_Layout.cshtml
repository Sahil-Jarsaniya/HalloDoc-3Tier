<!DOCTYPE html>
<html lang="en" data-bs-theme="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HalloDoc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @RenderSection("Styles", required: false)

</head>

<body>
    <div class="main w-100 h-100">
        <header id="header" class="shadow-lg mb-5">
            <img src="~/images/Fig1. Platform login page.jpg" class="h-100" alt="">
            <button id="light-dark-btn" type="button" class="btn border border-black m-3 m-lg-4 float-end"
                >
                <img src="~/images/dark_mode_black_24dp.svg" alt="">
            </button>
        </header>

        @RenderBody()
    <footer id="footer" class="footer w-100 mt-auto bg-dark">
        <span class="border-end border-white border-2 pe-3">Terms and Conditions</span>
        <span class="ps-3">Privacy Policy</span>
    </footer>
    </div>
    @RenderSection("Script", required: false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/js/bootstra.bundle.min.js"></script> *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
