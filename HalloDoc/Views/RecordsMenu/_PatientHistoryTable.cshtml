@model PaginatedList<PatientHistoryVM>;

<table class="table table-responsive d-none d-md-table">
    <thead>
        <tr class="table-secondary ">
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Phone Number</td>
            <td>Address</td>
            <td>Action  </td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items.Count == 0)
        {
            <tr>
                <td>No data found.</td>
            </tr>
        }
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.email</td>
                <td>@item.phoneNumber</td>
                <td>@item.Address</td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="PatientRecord" asp-controller="RecordsMenu" asp-route-reqId="@item.reqId">
                        Explore
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@*MobileView*@

<div class="d-md-none mobileView w-100">
    @foreach (var item in Model.Items)
    {
        <div class="shadow m-1 p-2 w-100" data-bs-toggle="collapse" href="#@item.reqId" role="button" aria-expanded="false">
               <p>@item.firstName @item.lastName</p>
               <p>@item.phoneNumber</p>
        </div>
        <div class="collapse shadow m-1 p-2" id="@item.reqId">
           <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar" viewBox="0 0 16 16">
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z" />
                </svg>
                Email: @item.email
           </p>
           <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone" viewBox="0 0 16 16">
                    <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                </svg>
                Phone: @item.phoneNumber
           </p>
           <p>
                <a class="btn btn-outline-primary float-end" asp-action="PatientRecord" asp-controller="RecordsMenu" asp-route-reqId="@item.reqId">
                    Explore
                </a><br />
           </p>
        </div>
    }
</div>


@*Pagination*@

<partial name="_PaginationPart" />

<script>
    $(".pageBtn").click(function () {
        var pageNumber = $(this).data('page');
        var Phonenumber = $("#Phonenumber").val();
        var Email = $("#Email").val();
        var PatientName = $("#PatientName").val();
        var Date1 = $("#Date1").val();
        $.ajax({
            url: '/RecordsMenu/PatientHistoryTable',
            type: 'POST',
            data: {
                pagenumber: pageNumber,
                Phonenumber: Phonenumber,
                Email: Email,
                PatientName: PatientName,
                Date1: Date1
            },
            success: function (result) {
                $('#PatientHistoryTable').html(result);
            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        })
    })
</script>