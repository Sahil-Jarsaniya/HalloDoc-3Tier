<table class="table table-responsive d-table">
    <thead>
        <tr class="table-secondary">
            <td>Name</td>
            <td></td>
            <td>Date of Birth</td>
            <td>Requestor</td>
            <td>Requested Date</td>
            <td>Phone</td>
            <td>Address</td>
            <td>Notes</td>
            <td>Chat With</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var bg = "";
            var name = item.Firstname + " " + item.Lastname;
            @switch (item.reqTypeId)
            {
                case 1:
                    bg = "#4fc54d";
                    break;
                case 2:
                    bg = "#ff9e2c";
                    break;
                case 3:
                    bg = "#10bce9";
                    break;
                case 4:
                    bg = "#f745aa";
                    break;
            }
            <tr>
                <td style="background-color: @bg;">@item.Firstname @item.Lastname</td>
                <td style="background-color: @bg;">
                    <a href="mailto: @item.Email" class="btn border rounded">
                        <img src="~/images/envelope.svg" />

                    </a>
                </td>
                <td style="background-color: @bg;">
                    @item.Strmonth
                </td>
                <td style="background-color: @bg;">
                    @if (item.reqTypeId == 1)
                    {
                        <div>
                            Patient <br />
                            @item.reqFirstname @item.reqLastname
                        </div>
                    }
                    @if (item.reqTypeId == 2)
                    {
                        <div>
                            Family/Friend <br />
                            @item.reqFirstname @item.reqLastname
                        </div>
                    }
                    @if (item.reqTypeId == 3)
                    {
                        <div>
                            Concierge <br />
                            @item.reqFirstname @item.reqLastname
                        </div>
                    }
                    @if (item.reqTypeId == 4)
                    {
                        <div>
                            Business <br />
                            @item.reqFirstname @item.reqLastname
                        </div>
                    }
                </td>
                <td style="background-color: @bg;">
                    @item.Createddate
                </td>
                <td style="background-color: @bg;">
                    <a href="tel:@item.Phonenumber" class="btn border rounded d-flex justify-content-center">
                        <img src="~/images/telephone.svg" />
                        @item.Phonenumber
                    </a>
                    (Patient)
                    @if (item.reqTypeId == 2)
                    {
                        <div>
                            <a href="tel:@item.FamilyPhonenumber" class="btn border rounded d-flex justify-content-center">
                                <img src="~/images/telephone.svg" />
                                @item.FamilyPhonenumber
                            </a>
                            (Family/Friend)
                        </div>
                    }
                    @if (item.reqTypeId == 3)
                    {
                        <div>
                            <a href="tel:@item.ConciergePhonenumber" class="btn border rounded d-flex justify-content-center">
                                <img src="~/images/telephone.svg" />
                                @item.ConciergePhonenumber
                            </a>
                            (Concierge)
                        </div>
                    }
                    @if (item.reqTypeId == 4)
                    {
                        <div>
                            <a href="tel:@item.BusinessPhonenumber" class="btn border rounded d-flex justify-content-center">
                                <img src="~/images/telephone.svg" />
                                @item.BusinessPhonenumber
                            </a>
                            (Business)
                        </div>
                    }
                </td>
                <td style="background-color: @bg;">
                    @item.Street, @item.City, @item.State, @item.Zipcode
                </td>
                <td style="background-color: @bg;">
                    -
                </td>
                <td style="background-color: @bg;">
                    <a class="btn border rounded">
                        <img src="~/images/personal_injury.svg" />
                        Provider
                    </a>
                </td>
                <td style="background-color: @bg;">
                    <a class="btn border rounded dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Actions
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a class="dropdown-item" href="">Assign Case</a></li>
                        <li><a class="btn dropdown-item" data-bs-toggle="modal" data-bs-target="#cancelModel-@item.reqClientId">Cancel Case</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ViewCase", new {reqClientId = item.reqClientId})">View Case</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ViewNote", new {reqClientId = item.reqClientId})">View Notes</a></li>
                        <li><a class="dropdown-item" href="#">Block Patient</a></li>
                    </ul>
                </td>
            </tr>

            <div class="modal fade" id="cancelModel-@item.reqClientId" tabindex="-1" aria-labelledby="newReqModal" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header" style="background-color: #01bce9; color:white;">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Cancellation</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="dropdown">
                                <form>
                                    <h5>Patient Name: @name</h5>
                                    <input id="reqClientId" value="@item.reqClientId" hidden />
                                    <select class="form-select form-select mb-3 CaseTag" id="CaseTag-@item.reqClientId" aria-label="Large select example">
                                        <option selected>Reasons for Cancellation</option>
                                        <option>No Respone to call or text, left message</option>
                                        <option>Cost Issue</option>
                                        <option>Insurance Issue</option>
                                        <option>Out of Service Area</option>
                                        <option>Not appropriate for service</option>
                                        <option>Referral to Clinic or Hospital</option>
                                    </select>
                                    <div class="form-floating m-1 form-div">
                                        <textarea class="form-control" placeholder="Leave a comment here" id="addNote"
                                                  style="height: 100px"></textarea>
                                        <label for="">Provide Additional Notes</label>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="CancelCaseBtn" class="btn" style="background-color: #01bce9; color:white;">Confirm</button>
                            <button id="CloseModal" type="button" class="btn" style="color: #01bce9; border: #01bce9 1px solid;" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>

        }
    </tbody>
</table>
<script>
    var addNote = $("#addNote").val();
    var casetag = $(".CaseTag").val();
    var reqClientId = $("#reqClientId").val();
    $("#CancelCaseBtn").click(function () {
        $.ajax({
            url: '/AdminDashboard/CancelCase',
            type: 'POST',
            data: { reqClientId: reqClientId, addNote: addNote, CaseTag: casetag },
            success: function (result) {
                $("CloseModal").click();
            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        })
    })
</script>