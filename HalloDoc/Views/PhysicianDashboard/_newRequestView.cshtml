@model PaginatedList<pendingReqViewModel>;
<table class="table table-responsive d-none d-md-table">
    <thead>
        <tr class="table-secondary">
            <td>Name</td>
            <td></td>
            <td>Phone</td>
            <td>Address</td>
            <td>Chat with</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items.Count == 0)
        {
            <tr>
                <td>No data found.</td>
            </tr>
        }
        @foreach (var item in Model.Items)
        {
            var bg = "";
            var name = item.Firstname + " " + item.Lastname;
            @switch (item.reqTypeId)
            {
                case 1:
                    bg = "#4fc54d";
                    break;
                case 2:
                    bg = "#ff9e2c";
                    break;
                case 3:
                    bg = "#10bce9";
                    break;
                case 4:
                    bg = "#f745aa";
                    break;
            }
            <tr>
                <td style="background-color: @bg;">@item.Firstname @item.Lastname</td>
                <td style="background-color: @bg;">
                    <a href="mailto: @item.Email" class="btn border rounded">
                        <img src="~/images/envelope.svg" />
                    </a>
                </td>
                <td style="background-color: @bg;">
                    <a href="tel:@item.Phonenumber" class="btn border rounded d-flex justify-content-center">
                        <img src="~/images/telephone.svg" />
                        @item.Phonenumber
                    </a>
                    (Patient)
                </td>
                <td style="background-color: @bg;">
                    @item.Street, @item.City, @item.State, @item.Zipcode
                </td>
                <td style="background-color: @bg;">
                    <a class="btn rounded border AdminChatBtn" id="" data-id="@item.reqClientId">Admin</a>
                </td>
                <td style="background-color: @bg;">
                    <a class="btn border rounded dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Actions
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a class="btn dropdown-item AssignCaseBtn" asp-action="AcceptRequest" asp-route-id="@item.reqClientId">Accept</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ViewCase", "PhysicianDashboard", new {reqClientId = item.reqClientId})">View Case</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("ViewNote", "PhysicianDashboard", new {reqClientId = item.reqClientId})">View Notes</a></li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

@*Mobile View*@
<div class="d-md-none mobileView">
    @foreach (var item in Model.Items)
    {
        var name = item.Firstname + "," + item.Lastname;
        <div class="shadow m-1 p-2" data-bs-toggle="collapse" href="#@item.reqClientId" role="button" aria-expanded="false">

            <div class="d-flex justify-content-between mb-2">
                @name
            </div>
            <div class="d-flex justify-content-between">
                <span class="w-50">
                    @item.Street, @item.City, @item.State, @item.Zipcode
                </span>
                <div class="w-50">
                    <button type="button" class="btn btn-outline-primary float-end">Map Location</button>
                </div>
            </div>
            <p>
                <img src="/images/clock.svg" />
                Wait Time: @item.Createddate
            </p>
        </div>
        <div class="collapse shadow m-1 p-2" id="@item.reqClientId">
            <a class="btn btn-outline-success float-end" href="@Url.Action("ViewCase", new {reqClientId = item.reqClientId})">View Case</a>
            <p>Email: @item.Email</p>
            <p>Patient: @item.Phonenumber</p>
            <div class="row">
                <div class="col-5 m-2">
                    <a class="btn btn-primary AssignCaseBtn w-100" data-name="@name" data-id="@item.reqClientId">Accept</a>
                </div>
                <div class="col-5 m-2">
                    <a class="btn btn-success w-100" href="@Url.Action("ViewNote", new {reqClientId = item.reqClientId})">View Notes</a>
                </div>
                <div class="col-5 m-2">
                    <a href="mailto: @item.Email" class="w-100 btn btn-success rounded">
                        Email
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@*Pagination*@

<partial name="_PaginationPart" />

<script>

    $(".AdminChatBtn").click(function () {
        var reqclientid = $(this).data('id');
        debugger;
        $.ajax({
            url: '/PhysicianDashboard/ChatWithAdmin',
            type: 'GET',
            data: {
                reqclientid: reqclientid
            },
            success: function (res) {
                $("#myChatBox").html(res);
                openChatBox();
            }
        })
    })

    $(".pageBtn").click(function () {
        var reqType = $("#filterReqType").val() 
        var pageNumber = $(this).data('page');
         var status = localStorage.getItem("status");
        var Name = $("#search").val() ;
        
        $("#pagenumber").val(pageNumber);

        $.ajax({
            url: '/PhysicianDashboard/PartialTable',
            type: 'POST',
            data: { Name: Name, status: 1, reqType: reqType, pageNumber: pageNumber },
            success: function (result) {
                $('#PartialTable').html(result);
            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        })
    })
</script>