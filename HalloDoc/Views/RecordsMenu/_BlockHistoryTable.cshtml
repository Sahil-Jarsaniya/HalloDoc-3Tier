                </svg>
                Notes: @item.Notes
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                    <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                </svg>
                is Active: @item.isActive
            </p>
            <p>

                <a class="btn float-end btn-outline-primary @(item.isActive == true ? "d-none" : "")" asp-action="UnBlockPatient" asp-controller="RecordsMenu" asp-route-id="@item.ReqId">
                    Unblock
                </a><br />
            </p>
        </div>
    }
</div>

@*Pagination*@

<partial name="_PaginationPart" />

<script>
    $(".pageBtn").click(function () {
        var pageNumber = $(this).data('page');
        var Phonenumber = $("#Phonenumber").val();
        var Email = $("#Email").val();
        var PatientName = $("#PatientName").val();
        var Date1 = $("#Date1").val();
        $.ajax({
            url: '/RecordsMenu/BlockHistoryTable',
            type: 'POST',
            data: {
                pagenumber: pageNumber,
                Phonenumber: Phonenumber,
                Email: Email,
                PatientName: PatientName,
                Date1: Date1
            },
            success: function (result) {
                $('#blockTable').html(result);
            },
            error: function (error) {
                console.log(error);
                alert('error fetching details')
            },
        })
    })
</script>