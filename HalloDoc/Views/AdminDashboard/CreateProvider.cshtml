@model EditProvider;
@{
    ViewData["Title"] = "Create Provider";
    Layout = "_adminLayout";
}
<div class="">
    <div class="container d-flex justify-content-between mt-4" style="max-width:1000px">
        <h4>
            Create Physician Account
        </h4>
        <a onclick="history.go(-1)" class="btn btn-outline-primary m-2 text-decoration-none float-end"
           id="back-btn">
            <img src="~/images/arrow_back_ios_FILL0_wght400_GRAD0_opsz24.svg" class="img-fluid" alt="">
            Back
        </a>
    </div>
    <div class="d-grid justify-content-center mt-4">
        <div class="shadow">
            <form method="post" asp-action="CreateProvider"  asp-controller="AdminDashboard" id="CreateProviderForm" class="viewCaseForm form-floating  patient-request-form p-3">
                <h5>Account Information</h5>
                <div class="row g-2 m-1">
                    <div class="col-md">
                        <div class="form-floating">
                            <input asp-for="UserName" type="text" class="form-control" id="userName" placeholder="">
                            <label for="">User Name</label>
                        </div>
                        <span></span>
                    </div>
                    <div class="col-md">
                        <div class="input-div form-floating mb-3 d-flex border rounded">
                            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password">
                            <label asp-for="Password" for="floatingPassword">Password</label>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <select asp-for="Roleid" class="form-select mb-3" id="role">
                                @foreach(var item in Model.Role)
                                {
                                    if(item.Isdeleted != true)
                                    {   
                                    <option value="@item.Roleid">@item.Name</option>
                                    }
                                }
                            </select>
                            <label for="">Role</label>
                        </div>
                    </div>
                </div>

                <h5>Physician Information</h5>

                <div class="row g-2 m-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Firstname" type="text" class="form-control" placeholder="">
                            <label for="">First Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Lastname" type="text" class="form-control" placeholder="">
                            <label for="">Last Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                            <label for="">Email</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <input asp-for="Mobile" type="tel" class="patientPhone form-control w-100 h-100" placeholder="">
                            <label for="">Phone</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Medicallicense" type="text" class="form-control" placeholder="">
                            <label for="">Medical License#</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Npinumber" type="text" class="form-control" placeholder="">
                            <label for="">NPI Number</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @foreach (var item in Model.Region)
                        {
                        <input class="regionCheckbox" type="checkbox" id="@item.Id" name="@item.Id" value="@item.value" />
                        <label for="@item.Id">@item.value</label>
                        }
                    </div>
                </div>
                <h5>Mailing & Billing Information</h5>
                <div class="row g-2 m-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Address1" type="text" class="form-control" placeholder="">
                            <label for="">Address1</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Address2" type="text" class="form-control" placeholder="">
                            <label for="floatingSelectGrid">Address2</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="City" type="text" class="form-control" placeholder="">
                            <label for="">City</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <select asp-for="State" class="form-select">
                                <option>guj</option>
                                <option>raj</option>
                                <option>md</option>
                            </select>
                            <label for="">State</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Zip" type="text" class="form-control" placeholder="">
                            <label for="">Zip</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <input asp-for="Altphone" type="tel" class="patientPhone form-control w-100 h-100" placeholder="">
                            <label for="">Phone</label>
                        </div>
                    </div>
                </div>

                <h5>Proivder Profile</h5>

                <div class="row g-2 m-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Businessname" type="text" class="form-control" placeholder="">
                            <label for="">Business Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Businesswebsite" type="text" class="form-control" placeholder="">
                            <label for="floatingSelectGrid">Business website</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group m-1 mb-3">
                            <input asp-for="PhyPhoto" type="file" id="actualFileBtn1" class="form-control" hidden>
                            <span id="fileChoosen1" class="form-control">Select Photo</span>
                            <label class="input-group-text btn btn-primary" id="uploadFileLabel1" for="actualFileBtn1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z" />
                                    <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                                </svg>
                                Upload
                            </label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating m-1 form-div">
                            <textarea asp-for="Adminnotes" class="form-control" placeholder="Leave a comment here" id="addNote"
                                      style="height: 100px"></textarea>
                            <label for="">Admin Notes</label>
                        </div>
                    </div>
                </div>
                <hr />

                <h5>Onboarding</h5>
                <div class="row g-2 m-1">

                    <div class="col-4">
                        <input type="checkbox" />
                        <span>Indeoendent Contractor Agreement </span>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary">Upload</button>
                        <button class="btn btn-primary">View</button>
                    </div>
                </div>
                <div class="row g-2 m-1">

                    <div class="col-4">
                        <input type="checkbox" />
                        <span>Background Check </span>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary">Upload</button>
                        <button class="btn btn-primary">View</button>
                    </div>
                </div>
                <div class="row g-2 m-1">

                    <div class="col-4">
                        <input type="checkbox" />
                        <span>Hippa Compliance</span>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary">Upload</button>
                        <button class="btn btn-primary">View</button>
                    </div>
                </div>
                <div class="row g-2 m-1">

                    <div class="col-4">
                        <input type="checkbox" />
                        <span>Non Disclouser Agreement</span>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary">Upload</button>
                        <button class="btn btn-primary">View</button>
                    </div>
                </div>
                <div class="row g-2 m-1">

                    <div class="col-4">
                        <input type="checkbox" />
                        <span>License Document  </span>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary">Upload</button>
                        <button class="btn btn-primary">View</button>
                    </div>
                </div>
                <hr />
                <button type="button" id="CreateAccountBtn" class="btn btn-success float-end">Create Account</button>
            </form>
        </div>
    </div>
</div>

@section AdminScript {
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"
            integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous">
    </script>
    <script>
        $("#CreateAccountBtn").click(function(){
            var selectedRegion = [];
            $(".regionCheckbox").each(function () {

                var checkboxdata = {
                    Id: parseInt($(this).attr('id')),
                    value: $(this).val(),
                    Checked: $(this).is(':checked')
                };

                selectedRegion.push(checkboxdata);
            })

            var formdata = new FormData($("#CreateProviderForm")[0]);

            formdata.append('selectedRegion', JSON.stringify(selectedRegion));

            $.ajax({
                url: '/AdminDashboard/CreateProvider',
                type: 'POST',
                data: formdata,
                processData: false,
                contentType: false
            })

        })
    </script>
}