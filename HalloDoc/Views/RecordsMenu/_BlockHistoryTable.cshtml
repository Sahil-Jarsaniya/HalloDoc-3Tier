@model PaginatedList<BlockHistoryVM>;

<table class="table table-responsive d-none d-md-table">
    <thead>
        <tr class="table-secondary">
            <td>Patient Name</td>
            <td>Phone Number</td>
            <td>Email</td>
            <td>Created Date</td>
            <td>Notes</td>
            <td>Is Active</td>
            <td>Action  </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.PatientName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.CreatedDate</td>
                <td>@item.Notes</td>
                <td>
                    @if (item.isActive == true)
                    {
                        <input type="checkbox" checked disabled />
                    }
                    else
                    {
                        <input type="checkbox" disabled />
                    }
                </td>
                <td>
                    <a class="btn btn-outline-primary @(item.isActive == true ? "d-none" : "")" asp-action="UnBlockPatient" asp-controller="RecordsMenu" asp-route-id="@item.ReqId">
                        Unblock
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@*MobileView*@

