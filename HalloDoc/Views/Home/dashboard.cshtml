@{
    ViewData["Title"] = "Submit Request";
}

@section Styles {
    <link rel="stylesheet" href="~/css/submit-request-screen.css">
    <link rel="stylesheet" href="~/css/PatientDashBoard.css">
}
<div id="tabs" class="border-top border-dark">
    <ul class="nav nav-tabs ms-5 ">
        <li class="nav-item" >
            <a class="nav-link active" data-bs-toggle="tab" aria-current="page" href="#tab1">Dashboard</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#tab2">Profile</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade show active m-5" id="tab1">
            <h4>Medical History</h4>
            <div >
                <a class="btn m-3 m-lg-4 float-end"
                   style="color: #01bce9; border: 1px solid #01bce9;">
                    Create New Request
                </a>
            </div>
            <div class=""> 

                <table class="table">
                    <thead>
                        <tr>
                            <th>Created Date</th>
                            <th>Current Status</th>
                            <th>Document</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {   
                        <tr>
                                <td>@item.Createddate</td>
                            <td>@item.Status</td>
                            <td>@item.Filename</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade show " id="tab2">
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quibusdam eveniet dolores minima voluptas quisquam incidunt fugit praesentium modi reprehenderit facere.</p>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}